{
  "name": "webshell-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev:frontend": "npm run dev --workspace=packages/frontend",
    "dev:backend": "npm run dev --workspace=packages/backend",
    "dev": "npm run dev:backend & npm run dev:frontend",
    "build:frontend": "npm run build --workspace=packages/frontend",
    "build:backend": "npm run build --workspace=packages/backend",
    "build": "npm run build --workspace=packages/shared && npm run build:backend && npm run build:frontend"
  },
  "devDependencies": {
    "typescript": "^5.3.3"
  }
}
